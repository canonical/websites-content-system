{
  "name": "websites-content-system",
  "version": "0.0.1",
  "repository": "git@github.com:canonical/canonicalwebteam.templateparser-backend.git",
  "author": "Canonical Webteam",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build-js && yarn run build-css",
    "build-css": "sass static/client/App.scss static/build/styles.css --load-path=node_modules --style=compressed && postcss --map false --use autoprefixer --replace 'static/build/**/*.css'",
    "build-js": "npx vite build",
    "lint": "npmPkgJsonLint . && tsc && eslint . --ext .ts,.tsx",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "start": "yarn run build && concurrently --raw 'yarn run watch' 'yarn run serve'",
    "test": "vitest",
    "watch": "watch -p 'static/client/**/*.{js,jsx,ts,tsx,scss}' -c 'yarn run build'"
  },
  "dependencies": {
    "@canonical/react-components": "0.60.0",
    "axios": "1.7.8",
    "classnames": "2.5.1",
    "formik": "2.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-query": "3.39.3",
    "react-router-dom": "6.24.1",
    "vanilla-framework": "4.16.0",
    "zustand": "4.5.5"
  },
  "devDependencies": {
    "@playwright/test": "1.49.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-c8": "0.33.0",
    "autoprefixer": "10.4.20",
    "concurrently": "8.2.2",
    "dotenv": "16.4.5",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-no-relative-import-paths": "1.5.5",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "jsdom": "21.1.2",
    "npm-package-json-lint": "8.0.0",
    "postcss": "8.4.49",
    "postcss-cli": "10.1.0",
    "prettier": "3.3.3",
    "sass": "1.77.8",
    "sass-loader": "13.2.2",
    "stylelint": "15.4.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "32.0.0",
    "stylelint-config-standard-scss": "7.0.1",
    "stylelint-order": "6.0.4",
    "stylelint-prettier": "3.0.0",
    "stylelint-scss": "4.6.0",
    "ts-loader": "9.5.1",
    "typescript": "5.7.2",
    "unplugin-auto-import": "0.17.6",
    "vite": "5.3.6",
    "vitest": "1.6.0",
    "watch-cli": "0.2.3"
  },
  "npmpackagejsonlint": {
    "rules": {
      "prefer-absolute-version-dependencies": "error",
      "prefer-absolute-version-devDependencies": "error",
      "prefer-alphabetical-dependencies": "error",
      "prefer-alphabetical-devDependencies": "error"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.21.1"
  }
}